<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ycp.adroidlibrary.Dashboard"
    android:id="@+id/dash"
    android:background="#4eb8ff">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/optionButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@android:drawable/ic_input_get" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendarButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2"
        android:onClick="onCalendarPress"
        android:src="@android:drawable/ic_menu_my_calendar" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messageButton"
        android:src="@android:drawable/sym_action_chat"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/calendarButton"
        android:layout_toEndOf="@+id/calendarButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notificationButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/messageButton"
        android:layout_toEndOf="@+id/messageButton"
        android:src="@android:drawable/ic_popup_reminder" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileButton"
        android:layout_alignParentBottom="true"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_alignTop="@+id/notificationButton"
        android:layout_toRightOf="@+id/notificationButton"
        android:layout_toEndOf="@+id/notificationButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:id="@+id/dashboardButton"
        android:layout_alignTop="@+id/optionButton"
        android:layout_toRightOf="@+id/optionButton"
        android:layout_toEndOf="@+id/optionButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchButton"
        android:layout_alignBottom="@+id/optionButton"
        android:layout_toRightOf="@+id/dashboardButton"
        android:layout_toEndOf="@+id/dashboardButton"
        android:src="@android:drawable/ic_menu_search" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postButton"
        android:layout_alignBottom="@+id/searchButton"
        android:layout_toRightOf="@+id/searchButton"
        android:layout_toEndOf="@+id/searchButton"
        android:src="@android:drawable/ic_menu_edit" />

</RelativeLayout>
